<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    @Html.ActionLink("Gorilla Adventures", "IndexAdmin", "Home", null, new { @class = "navbar-brand" })
    <!--<a class="navbar-brand" href="#">Gorilla Adventures</a>-->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Mantenimientos</a>
                <div class="dropdown-menu">
                    @Html.ActionLink("Marcas", "Index", "Marca", null, new { @class = "dropdown-item" })
                    @Html.ActionLink("Cuadraciclos", "IndexAdmin", "Cuadra", null, new { @class = "dropdown-item" })
                    @Html.ActionLink("Tours", "IndexAdmin", "Servicio", null, new { @class = "dropdown-item" })
                    <div class="dropdown-divider"></div>
                    @Html.ActionLink("Usuarios", "IndexAdmin", "Registro", null, new { @class = "dropdown-item" })
                </div>
            </li>
            <li class="nav-item">
                @Html.ActionLink("Reservas", "IndexAdmin", "Reserva", null, new { @class = "nav-link" })
            </li>
            @* Información usuario *@
            @{
                string nombre = "";
                string email = "Iniciar sesión | Registrarse";
                Infraestructure.Models.USUARIO oUsuario;
                //Validar si existe en la sesión
                if (Session["User"] != null)
                {
                    oUsuario = (Infraestructure.Models.USUARIO)Session["User"];
                    if (oUsuario != null)
                    {
                        nombre = $"{oUsuario.NOMBRE} {oUsuario.PRIMER_APELLIDO}";
                        email = oUsuario.CORREO;
                    }
                }
            }
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">@email</a>
                <div class="dropdown-menu">
                    @if (Session["User"] != null)
                    {
                        <div class="dropdown-item">
                            @* Nombre Usuario *@
                            Usuario: @nombre
                        </div>
                    }


                    @if (Session["User"] == null)
                    {
                        @Html.ActionLink("Iniciar sesión", "Index", "Login", null, new { @class = "dropdown-item" })
                        <div class="dropdown-divider"></div>
                        @Html.ActionLink("Registrarse", "Index", "Registro", null, new { @class = "dropdown-item" })
                    }
                    else
                    {
                        <div class="dropdown-divider"></div>
                        @Html.ActionLink("Cerrar sesión", "Logout", "Login", null, new { @class = "dropdown-item " })
                    }

                </div>
        </ul>
    </div>
</nav>
