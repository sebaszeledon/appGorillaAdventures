@model IEnumerable<Infraestructure.Models.SERVICIO>

@{
    ViewBag.Title = "Mantenimiento Tours";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="padding:5%">
    <h1>@ViewBag.titulo</h1>

    <p>
        @Html.ActionLink("Nuevo", "Create")
    </p>
    <table class="table table-hover" style="text-align:center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DESCRIPCION)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PRECIO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DURACION)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="table-secondary">
                <td>
                    @Html.DisplayFor(modelItem => item.DESCRIPCION)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PRECIO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DURACION)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.ID_SERVICIO }) |
                    @Html.ActionLink("Detalle", "Details", new { id = item.ID_SERVICIO }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.ID_SERVICIO })
                </td>
            </tr>
        }

    </table>
</div>